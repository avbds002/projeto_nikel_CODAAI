generator client {
  /*
  Essa linha corrige o erro que estava no diretório generated do prisma e estava impossibilitando o
  uso do npm run start

  Após apagar o generated é só deixar o provider e trocar o import do prisma client

  também é necessário apagar a pasta generated e colocar e usar o comando npx prisma generate novamente
  Error [ERR_MODULE_NOT_FOUND]
  */
  provider = "prisma-client-js"
  
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  name String?
  login String @unique
  password String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Transaction {
  id Int @id @default(autoincrement())
  value Decimal
  type Int
  description String
  date DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}